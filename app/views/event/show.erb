<h1 class="text-center"><%= @event.name %></h1>
<div class="row">
<div class="col-md-4 col-md-offset-2">
<p>Location: <%= @event.location %></p>
<p>Date: <%= @event.formatted_date %></p>
<p>
  Invited Attenders: <%= @event.attenders.count %><br />
  Confirmed Attenders: <%= @event.confirmed_attenders.count %>
</p>

<p>
  Contractor Count: <%= @event.contractors.count %><br />
  Contractor Cost Total: <%= @event.total_contractor_cost %><br />
  Average Contractor Cost: <%= @event.avg_contractor_cost %>
</p>
</div>
<div class="col-md-4 col-md-offset-2">
<a href="/event/edit" class="btn btn-primary">Edit Event</a>

<br />
<br />

<form action="/event/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" class="btn btn-danger" value="Delete event">
</form>
</div>
</div>